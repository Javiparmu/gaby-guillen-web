--- 
import { Analytics } from '@vercel/analytics/react';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Cuadros del artista Gaby Guillén">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="og:title" content={title} />
		<meta name="og:description" content="Cuadros del artista Gaby Guillén" />
		<meta name="og:image" content="../assets/images/og-image.avif" />
		<meta name="og:type" content="website" />
		<meta name="og:url" content="https://gabyguillen.vercel.app" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Analytics />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
		color: white;
	}

	@font-face {
		font-family: Poppins;
		src: url('../assets/fonts/Poppins-Regular.woff2') format('woff2');
		font-weight: 400;
	}

	@font-face {
		font-family: Poppins;
		font-weight: 700;
		src: url('../assets/fonts/Poppins-Bold.woff2') format('woff2');
	}

	@font-face {
		font-family: Poppins;
		font-weight: 800;
		src: url('../assets/fonts/Poppins-ExtraBold.woff2') format('woff2');
	}

	@font-face {
		font-family: Poppins;
		font-weight: 900;
		src: url('../assets/fonts/Poppins-Black.woff2') format('woff2');
	}

	body {
		font-family: Poppins, sans-serif;
		background: #13151A;
		color: white;
		padding: 0;
		margin: 0;
	}

	.section-container {
		scroll-snap-type: y mandatory;
		scrollbar-gutter: 0;
		overflow-y: scroll;
		height: 100vh;
		-ms-overflow-style: none;
		scrollbar-width: none; 
	}

	.section-container::-webkit-scrollbar {
		display: none;
	}

	.content-section {
		display: grid;
		place-items: center;
		align-content: center;
		height: 100dvh;
		scroll-snap-align: start;
	}

	#header-section {
		align-content: center;
		height: 100dvh;
		scroll-snap-align: center;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
